<a href="/">Home</a>
<h1 class="title">Add Books</h1>
<div class="add_new_item">
    <form action="/insertQueries/add_book" method="post">
        <label>Title: <input type="text" name="title" pattern="[a-zA-Z0-9:\s]+" title="Please enter only letters, numbers, and ':'" required></label>
        <br>
        <br>
        <label>Issue #: <input type="text" name="issue" pattern="[0-9]{1,}" title="Please enter only numbers" required></label>
        <br>
        <br>
        <label>UPC: <input type="text" name="upc" pattern="[0-9]{12,12}" title="Please enter a 12-digit code" required></label>
        <br>
        <br>
        <label>Price: <input type="text" name="price" pattern="[0-9]*[.]?[0-9]+" title="Please enter a price" required></label>
        <br>
        <br>
        <label>
            Owner:
            <Select name="owner" required>
                {{#each owners}}
                <!--need a getOwners function in insertQueries.js to get a list of owner ids and full names-->
                <option value="{{id}}">{{fullName}}</option>
                {{/each}}
            </Select>
        </label>
        <br>
        <br>
        <label>
            Publisher:
            <Select name="publisher" required>
                {{#each publishers}}
                <!--need a getPublishers function in insertQueries.js to get a list of publisher ids and names-->
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </Select>
        </label>
        <br>
        <br>
        <label>
            Authors:
            <Select name="authors" multiple size="4" required>
                {{#each authors}}
                <!--need a getAuthors function in insertQueries.js-->
                <option value="{{id}}">{{fullName}}</option>
                {{/each}}
            </Select>
        </label>
        <br>
        <br>
        <label>
            Genres:
            <Select name="genres" multiple size="4" required>
                {{#each genres}}
                <!--need a getGenres function in insertQueries.js-->
                <option value="{{id}}">{{type}}</option>
                {{/each}}
            </Select>
        </label>
        <br>
        <br>
        <input type="submit" value="Add" />
    </form>
    <br>
    <button onclick="window.history.back()">Cancel</button>
</div>