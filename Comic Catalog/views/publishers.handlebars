<h1 class="title">Add/Remove Publishers</h1>
<div id="update_add_block">
    <a href="/insertQueries/add_publisher" id="add_publisher">Add</a>
</div>

<table>
    <thead>
        <tr>
            <th>Publishers</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        <!--getPublishers function in publishers.js-->
        {{#each publishers}}
        <tr>
            <td>{{name}}</td>
            <td><button class="delete_butt" onclick="deletePublisher({{id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

