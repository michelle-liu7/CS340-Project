<a href="/">Home</a>
<h1 class="title">Add/Remove Authors</h1>
<div id="update_add_block">
    <a href="/insertQueries/add_author" id="add_author">Add</a>
</div>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        <!--getAuthors function in authors.js-->
        {{#each authors}}
        <tr>
            <td>{{fname}}</td>
            <td>{{lname}}</td>
            <td><button class="delete_butt" onclick="deleteAuthor({{id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

